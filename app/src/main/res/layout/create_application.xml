<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/firstname"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/surname"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstname"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surname"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ssn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="SSN"
        android:inputType="number" />

    <EditText
        android:id="@+id/availableFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ssn"
        android:layout_below="@+id/ssn"
        android:ems="10"
        android:hint="Available from"
        android:inputType="date" />

    <EditText
        android:id="@+id/availableTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/availableFrom"
        android:layout_below="@+id/availableFrom"
        android:ems="10"
        android:hint="Available to "
        android:inputType="date" />

    <EditText
        android:id="@+id/experiences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/availableTo"
        android:layout_below="@+id/availableTo"
        android:ems="10"
        android:hint="Experiences, with number of years of experience. Seperate each with a comma.
Eg: korv grillare, 4.5, meme lord, 2"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/submitButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/experiences"
        android:layout_centerHorizontal="true"
        android:text="Send in Job Application" />
</RelativeLayout>